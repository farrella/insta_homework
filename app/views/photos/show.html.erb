<div class="page-header">
  <h1>Photo #<%= @photo.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image url</dt>
  <dd><img src="<%= @photo.image_url %>" width="480"></dd>


  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>User</dt>
  <dd><%= @photo.user_id %></dd>

  <dt>Comments</dt>
  <dd>
  	<% @photo.comments.each do |comment| %>
 	<%= comment.content %>
 	<% end %>
  </dd>
</dl>
